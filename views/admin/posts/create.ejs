<script src='https://cdn.tiny.cloud/1/wnd2guicp3qjh1f7fgagtltpixf2s8fseydewus3p4gxqnqz/tinymce/5/tinymce.min.js' referrerpolicy="origin">
 </script>

<div class="container-fluid">
    <h1 style="text-align:center;">Create New Post</h1>

    <div class="row p-4" >
        <div class="col-md-12">
            <form action="/admin/posts/create" method="post" enctype="multipart/form-data">
              <!-- enctype="multipart/form-data"   this is for file upload -->

                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="title" id="title" placeholder="Enter The Title" required>
                </div>
                <div class="form-group">
                    <label for="author">Author</label>
                    <input type="text" class="form-control" name="author" id="author" placeholder="Author Name" required>
                </div>



      <!--          <div class="form-group">
                    <label for="status">Status</label>
                    <select name="status" id="status" class="form-control">
                        <option value="public">Public</option>
                        <option value="private">Private</option>
                        <option value="draft">Draft</option>
                    </select>
                </div>  -->

                <div class="form-group">
                  <label for="category">Category</label>
                  <select name="category" id="category" class="form-control">

                    <%categories.forEach(function(post){%>

                      <option value="<%=post._id%>"><%=post.title%></option>

                      <%})%>


                    </select>
                  </div>


                  <div class="form-group">
                      <label for="file">File Upload</label>
                      <input type="file" class="form-control" id="file" name="uploadedFile"  accept="image/jpeg, image/jpg, image/png, image/bmp" required>
                  </div>


                  <hr>
                  <div>
                    <h4>SEO</h4>
                                <div class="form-group">
                                    <label for="title">Image Alt text</label>
                                    <input required type="text" class="form-control" name="imgalt" id="title" placeholder="Alt text for image" >
                                </div>
                                <div class="form-group">
                                    <label for="title">Url Slug (eg: collegetime.co/blogs/urlSLug)</label>
                                    <input required type="text" class="form-control" name="slug" id="title" placeholder="Type Blog Url Slug" >
                                </div>
                                <div class="form-group">
                                    <label for="summary">summary of the blog</label>
                                    <input required type="text" class="form-control" name="summary" id="title" placeholder="Write Short summary" >
                                </div>


                                <!-- <div class="form-group">
                                    <label for="summary">Summary of the blog</label>
                                    <textarea  required name="summary" id="summary" class="form-control" placeholder="write short summary of blog" rows="3"></textarea>
                                </div> -->


                    </div>
                      <hr style="padding:5px;">




          <!--      <div class="form-check ml-3">
                    <label for="allowComments">
                        <input type="checkbox" class="form-check-input" id="allowComments" name="allowComments" required>
                        Allow Comments
                    </label>
                </div>-->

                <div class="form-group">
                    <label for="description">Content</label>
                    <textarea name="description" id="description" class="form-control" placeholder="Enter your content here" rows="50"></textarea>
                </div>


                <button class="btn btn-outline-success btn-lg" type="submit">Create Post</button>


            </form>
        </div>
    </div>
</div>
<script>
   tinymce.init({
     selector: 'textarea',
     content_style: 'body { font-family: Georgia; font-size:20px; }',
     plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker advlist autolink link image lists charmap print preview hr anchor pagebreak',
     toolbar: 'undo redo| fontselect  fontsizeselect| bold italic underline |forecolor backcolor alignleft aligncenter alignright alignjustify preview| bullist numlist outdent indent | link image | print media fullpage | forecolor backcolor emoticons',
     toolbar_mode: 'floating',
     fontsize_formats: '8pt 10pt 12pt 14pt 16pt 18pt 24pt 36pt',
     tinycomments_mode: 'embedded',
     tinycomments_author: 'Author name',
   });
 </script>
